<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="Give Preparation Time"
        android:textColor="@color/pure_black"
        android:textSize="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical">
        <com.skydoves.elasticviews.ElasticImageView
            android:id="@+id/minus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/minus"
            android:padding="10dp"
            android:tint="@color/color_blue"
            app:imageView_duration="200"
            app:imageView_scale="0.93"
            android:background="@drawable/outline_bg"/>
        <TextView
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/outline_bg"
            android:hint="Give Time"
            android:text="15"
            android:textSize="20dp"
            android:textColor="@color/pure_black"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:paddingLeft="10dp"
            android:inputType="number"/>
        <com.skydoves.elasticviews.ElasticImageView
            android:id="@+id/plus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/plus"
            android:padding="10dp"
            android:tint="@color/color_blue"
            app:imageView_duration="200"
            app:imageView_scale="0.93"
            android:background="@drawable/outline_bg"/>
    </LinearLayout>

   <LinearLayout
       android:id="@+id/lineReason"
       android:layout_width="match_parent"
       android:visibility="gone"
       android:layout_height="wrap_content"
       android:orientation="vertical">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Reason for increasing time"
           android:textSize="15dp"
           android:layout_marginLeft="10dp"
           android:fontFamily="@font/roboto"
           android:textColor="@color/pure_black"/>
       <Spinner
           android:id="@+id/resonSpinner"
           android:layout_width="match_parent"
           android:layout_height="45dp"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="10dp"
           android:layout_marginRight="10dp"
           android:layout_marginBottom="10dp"
           android:background="@drawable/outline_bg"/>

   </LinearLayout>

            <com.skydoves.elasticviews.ElasticButton
                android:id="@+id/ok_btn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Accept"
                android:textColor="@color/color_white"
                app:button_duration="200"
                android:backgroundTint="@color/color_green"
                app:button_scale="0.93"
                android:background="@drawable/outline_bg"
                android:layout_marginTop="10dp"/>
</LinearLayout>